<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 数据库连接配置 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/pair_todo?currentSchema=pair_todo"
                        userId="todo_user"
                        password="todotodo">
        </jdbcConnection>

        <!-- 生成实体类配置 -->
        <javaModelGenerator targetPackage="com.example.pairtodo.model"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
            <property name="fromColumns" value="true"/>
            <property name="constructorBased" value="true"/>
            <!-- ✅ 关键配置：开启驼峰命名 -->
            <property name="useActualColumnNames" value="false"/>
        </javaModelGenerator>

        <!-- 生成Mapper XML配置 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 生成Mapper接口配置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.example.pairtodo.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 指定要生成的表 -->
        <table schema="pair_todo" tableName="user" enableCountByExample="true"
               enableUpdateByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" selectByExampleQueryId="true">
            <property name="constructorBased" value="true"/>
            <property name="trimStrings" value="true"/>
        </table>
        
        <table schema="pair_todo" tableName="pair" enableCountByExample="true"
               enableUpdateByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" selectByExampleQueryId="true">
            <property name="constructorBased" value="true"/>
            <property name="trimStrings" value="true"/>
        </table>
        
        <table schema="pair_todo" tableName="todo" enableCountByExample="true"
               enableUpdateByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" selectByExampleQueryId="true">
            <property name="constructorBased" value="true"/>
            <property name="trimStrings" value="true"/>
        </table>
    </context>
</generatorConfiguration>
